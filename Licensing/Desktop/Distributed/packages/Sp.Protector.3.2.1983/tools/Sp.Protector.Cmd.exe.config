<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Inhibit loader exceptions when protecting assemblies from network or similarly mapped drives/contexts - we're not running the code, merely walking the metadata-->
  <runtime>
    <loadFromRemoteSources enabled="true" />
  </runtime>
  <!-- We apply useLegacyV2RuntimeActivationPolicy in order to avoid errors when transformation encounters CLR 1.1 and CLR 2.0 based mixed mode assemblies - see http://stackoverflow.com/questions/1604663/what-does-uselegacyv2runtimeactivationpolicy-do-in-the-net-4-config-->
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0.30319"/>
  </startup>
</configuration>