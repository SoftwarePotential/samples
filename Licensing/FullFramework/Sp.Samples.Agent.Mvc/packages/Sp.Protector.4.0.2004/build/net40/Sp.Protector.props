<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    
    <!-- Inhibit auto-inclusion of Slps.Protector.targets by the SDK if installed as our partner .targets file is in charge of supplying it with the correct inputs. [WORKAROUND: One can still include it explicitly if required] -->
    <Slps_Protect_Disable_Auto>true</Slps_Protect_Disable_Auto>

    <!-- OOTB, we break the convention of the SDK (whereby one requests Protection via SLPS_PROTECT) and turn it on by default.
      One can opt out by adding SKIP_SP_PROTECT to DefineConstants.
    -->
    <SpProtect_ProtectionRequestedViaDefine>true</SpProtect_ProtectionRequestedViaDefine>

    <!--Pre-computed Properties used by our sibling .targets file-->
    <SpProtectorPackageToolsPath Condition =" '' == '$(SpProtectorPackageToolsPath)' ">$(MSBuildThisFileDirectory)\..\..\tools\net40</SpProtectorPackageToolsPath>
    <SpProtectorPackageToolsProtectorCmdPath Condition =" '' == '$(SpProtectorPackageToolsProtectorCmdPath)' ">$(SpProtectorPackageToolsPath)\Sp.Protector.Cmd</SpProtectorPackageToolsProtectorCmdPath>
  </PropertyGroup>
</Project>
