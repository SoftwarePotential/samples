<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup>
		<SpAgentPermutedDll Include="$(MSBuildThisFileDirectory)Sp.Agent.62340.dll" />
	</ItemGroup>
	<!-- AfterBuild is too late in the process to add files to FileWrites, they will not get written to FileListAbsolute.txt and therefore will not be cleaned -->
	<Target Name="AfterCompile">
		<MakeDir Directories="$(OutputPath)"/>
		<Copy DestinationFolder="$(OutputPath)" SourceFiles="@(SpAgentPermutedDll)" SkipUnchangedFiles="true" >
			<Output TaskParameter="CopiedFiles" ItemName="OutputSpAgentPermutedDll"/>
		</Copy>
		<!-- Append to FileWrites so the file will be removed on clean, even after the package has been uninstalled and our custom targets are no longer run -->
		<ItemGroup>
			<FileWrites Include="@(OutputSpAgentPermutedDll)"/>
		</ItemGroup>
	</Target>
</Project>