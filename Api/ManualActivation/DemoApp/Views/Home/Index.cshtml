@model DemoApp.Models.ManualActivationModel
@{
    ViewBag.Title = "ManualActivation";
   
}

<header>
    <h2>Activate a License Manually:</h2>

    <aside id="more_info">
        <a class="button help mini">?</a>
        <div id="info_text">
            <p>When a license is to be installed on a machine that does not have direct internet connectivity, 
                you must generate an Activation Request on the target machine, submit this to Software Potential,
                which will generate a license file which must then be copied back to the target machine for installation.
                To manually activate a license paste the Activation Request into the Activation Request field on this page. 
                On successful activation the automatically generated license file can then be transferred to offline machine where it can be installed manually.
            </p>
        </div>
    </aside>
</header>


@using ( Html.BeginForm() )
{
    <div id="messages" >
        @Html.ValidationSummary( true )
        @Html.ValidationMessageFor( model => model.ActivationRequest )
    </div>

    <fieldset>

        <div class="form_pair">
            <label for="ActivationRequest">Activation Key:</label>
            @Html.TextAreaFor( model => model.ActivationRequest )
        </div>

     
        <div class="button_group">
            <button class="button activation ">Activate</button>
        </div>
    </fieldset>
    
}
@if ( Model != null && Model.FileId != null && Model.FileId != Guid.Empty)
{
    <section class="download_link">
        @Html.ActionLink( "Download license file", "Download", new { fileId = Model.FileId } );
    </section>
}
