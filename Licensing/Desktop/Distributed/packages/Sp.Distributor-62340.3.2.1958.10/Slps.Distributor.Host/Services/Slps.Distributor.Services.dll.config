<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.diagnostics>
    <trace autoflush="true" />

    <sources>
      <source name="Slps.Distributor.Core.Logging" switchValue="Verbose">
        <listeners>
          <add name="LogToFile" />
        </listeners>
      </source>
    </sources>

    <sharedListeners>
      <add name="LogToFile" type="Slps.Distributor.Server.Logging.ForwardToLog4NetTraceListener, Slps.Distributor.Server"/>
    </sharedListeners>

  </system.diagnostics>

  <appSettings>
    <add key="Slps.Distributor.Service.BaseUri" value="http://localhost:8731/"/>
    <add key="Slps.Distributor.Service.RenewalPollingMinutes" value="5"/>
    <!-- 
			Default is to send credentials as some Microsoft ISA firewalls need it as Standard does after an initial failure. 
			Switch to true iff the web service calls are failing due to proxy _authentication_ issues.
				<add key="Slps.Distributor.Activation.InhibitProxyCredentials" value="true" />
		-->
    <!-- 
		The activation server is controlled by ActivationServiceResolver
		To override the activation server for test purposes add the following key
		 <add key="Slps.Internal.Test.ActivationServers" value="SERVERNAME/LicenseIssueWeb" />
		-->
  </appSettings>
</configuration>