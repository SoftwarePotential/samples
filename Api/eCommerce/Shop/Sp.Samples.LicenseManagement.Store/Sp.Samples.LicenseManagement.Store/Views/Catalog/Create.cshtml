@model Sp.Samples.LicenseManagement.Store.Models.CatalogEntryModel

@{
    ViewBag.Title = "Add a Catalog Entry";
}

<h2>Add a Catalog Entry</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CatalogEntry</legend>
        <table>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ProductName)
                    </div>                    
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ProductName)
                        @Html.ValidationMessageFor(model => model.ProductName)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ProductVersion)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ProductVersion)
                        @Html.ValidationMessageFor(model => model.ProductVersion)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.SkuId)                        
                    </div>
                    
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.SkuId)
                        @Html.ValidationMessageFor(model => model.SkuId)
                    </div>                    
                    SKU Id value must correlate to a valid SKU Id from the Software Potential Service
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LicensingBasis)                        
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownListFor(l=>l.LicensingBasis, new SelectList(Model.LicensingBases, Model), "---Select License Type---")
                        @Html.ValidationMessageFor(model => model.LicensingBasis)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Blurb)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Blurb)
                        @Html.ValidationMessageFor(model => model.Blurb)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Price)
                    </div>                    
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Add Catalog Entry" />
                </td>
                <td>
                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </td>
            </tr>   
        </table>
    </fieldset>
}

