<Window x:Class="DemoApp.Checkout.CheckoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:checkout="clr-namespace:DemoApp.Checkout"
		xmlns:global="clr-namespace:DemoApp"
        Title="Manage Checkout" Height="450" Width="450"  MinHeight="250" MinWidth="450">
	<Window.InputBindings>
		<KeyBinding Key="Escape" Command="{x:Static global:CloseWindowCommand.Instance}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
	</Window.InputBindings>
	<Grid>
		<DockPanel>
			<Frame Name="CheckoutFrame" DockPanel.Dock="Top" Height="400"  Width="420"/>
			<StackPanel  Margin="0,10,5,10" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Orientation="Horizontal">
				<Button HorizontalAlignment="Left" Content="Close" Margin="0,0,0,0"
                                Command="{x:Static global:CloseWindowCommand.Instance}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" >
				</Button>
			</StackPanel>
		</DockPanel>
	</Grid>
</Window>