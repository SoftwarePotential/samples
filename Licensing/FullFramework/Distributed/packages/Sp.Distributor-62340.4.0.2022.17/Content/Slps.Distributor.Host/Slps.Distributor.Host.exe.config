<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="Slps.Distributor.Host" type="Slps.Distributor.Host.Config.DistributorHostConfigSection, Slps.Distributor.Host"/>
  </configSections>

  <Slps.Distributor.Host>
    <Web BaseDir="Web" VDir="/Web" Port="2468"/>
    <Services BaseDir="Services" ConfigFile="Slps.Distributor.Services.dll.config"/>
  </Slps.Distributor.Host>

  <system.diagnostics>
    <trace autoflush="true"/>

    <sources>
      <source name="Slps.Distributor.Core.Logging" switchValue="Verbose">
        <listeners>
          <add name="LogToFile" />
        </listeners>
      </source>
    </sources>

    <sharedListeners>
      <add name="LogToFile" type="Slps.Distributor.Server.Logging.ForwardToLog4NetTraceListener, Slps.Distributor.Server"/>
    </sharedListeners>
  </system.diagnostics>

</configuration>