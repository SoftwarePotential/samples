<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" InitialTargets="CopySpProtectConfigLocal" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <SpProtectConfig Include="$([System.IO.Path]::Combine($(MSBuildThisFileDirectory),Sp.Protect.config))"></SpProtectConfig>
  </ItemGroup>

  <Target Name="CopySpProtectConfigLocal">
    <Copy
        SourceFiles="@(SpProtectConfig)"
        DestinationFolder="$(MSBuildProjectDirectory)"
         Condition="!Exists('$([System.IO.Path]::Combine($(MSBuildProjectDirectory),Sp.Protect.config))')"
        />
  </Target>
</Project>